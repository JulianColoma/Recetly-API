# Obtener todas las recetas
GET http://localhost:1234/recipes
Accept: application/json

###

# Obtener una receta por ID
GET http://localhost:1234/recipes/2
Accept: application/json

###

# Crear una nueva receta
POST http://localhost:1234/recipes
Content-Type: application/json

{
    "title": "Receta de prueba",
    "photo": "https://example.com/photo.jpg",
    "difficulty": 2,
    "comments": "Un comentario de prueba",
    "ingredients": ["Ingrediente 1", "Ingrediente 2"],
    "steps": ["Paso 1", "Paso 2"]
}

###

# Eliminar una receta por ID
DELETE http://localhost:1234/recipes/2

###

# Actualizar una receta por ID
PATCH http://localhost:1234/recipes/3
Content-Type: application/json

{
    "title": "Receta actualizada",
    "photo": "https://example.com/photo-updated.jpg",
    "difficulty": 3,
    "comments": "Comentario actualizado",
    "ingredients": ["Ingrediente actualizado 1", "Ingrediente actualizado 2"],
    "steps": ["Paso actualizado 1", "Paso actualizado 2"]
}

